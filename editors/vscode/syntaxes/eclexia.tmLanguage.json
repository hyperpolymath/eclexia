{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Eclexia",
  "scopeName": "source.eclexia",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#annotations"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#dimensional-literals"
    },
    {
      "include": "#function-declaration"
    },
    {
      "include": "#type-declaration"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.eclexia",
          "match": "//.*$"
        },
        {
          "name": "comment.block.eclexia",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.eclexia",
          "match": "\\b(if|else|match|for|while|break|continue|return)\\b"
        },
        {
          "name": "keyword.declaration.eclexia",
          "match": "\\b(fn|let|const|type|import|resource|adaptive|shadow)\\b"
        },
        {
          "name": "keyword.other.eclexia",
          "match": "\\b(budget|dimension|fast|slow|balanced)\\b"
        },
        {
          "name": "storage.type.eclexia",
          "match": "\\b(Int|Float|String|Bool|Unit|Energy|Time|Memory|Carbon)\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.eclexia",
          "match": "@(requires|provides|builtin|test|bench)\\b",
          "captures": {
            "0": {
              "name": "storage.type.annotation.eclexia"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.eclexia",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.eclexia",
              "match": "\\\\(n|r|t|\\\\|'|\"|0)"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.eclexia",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.eclexia",
          "match": "\\b[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.hex.eclexia",
          "match": "\\b0x[0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.binary.eclexia",
          "match": "\\b0b[01][01_]*\\b"
        }
      ]
    },
    "dimensional-literals": {
      "patterns": [
        {
          "name": "constant.numeric.dimensional.eclexia",
          "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?([eE][+-]?[0-9]+)?(J|W|Wh|kWh|MWh|kg|g|mg|m|km|mm|s|ms|us|ns|gCO2|kgCO2|tCO2)\\b"
        }
      ]
    },
    "function-declaration": {
      "patterns": [
        {
          "name": "meta.function.eclexia",
          "match": "\\b(fn|adaptive)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "keyword.declaration.function.eclexia"
            },
            "2": {
              "name": "entity.name.function.eclexia"
            }
          }
        }
      ]
    },
    "type-declaration": {
      "patterns": [
        {
          "name": "meta.type.eclexia",
          "match": "\\b(type)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": {
              "name": "keyword.declaration.type.eclexia"
            },
            "2": {
              "name": "entity.name.type.eclexia"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.eclexia",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.comparison.eclexia",
          "match": "==|!=|<|>|<=|>="
        },
        {
          "name": "keyword.operator.logical.eclexia",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.eclexia",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.eclexia",
          "match": "->"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.eclexia",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.unit.eclexia",
          "match": "\\(\\)"
        }
      ]
    }
  }
}
